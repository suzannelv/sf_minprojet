<div class="col" data-aos="fade-up"
     data-aos-duration="3000">
  <div class="card shadow-sm course-card">

    {% if course.coverImage starts with 'http' %}
    <img src="{{ course.coverImage }}" alt="" class="cover-img img-fluid">
    {% else %}
    <img src="{{ app.request.basePath ~ '/uploads/images/' ~ course.coverImage }}" alt="" class="cover-img img-fluid">
    {% endif %}
  
    <div class="card-body">
    <h2>{{course.name}}</h2>
    {% for tag in course.tags %}
      <span class="{{tag.bgColor}} {{tag.textColor}} badge" >{{tag.name}}</span>
    {% endfor %}

      <p class="card-text">{{course.description | u.truncate(100, '...', false)}}</p>
      <p class="card-text"><span class="fw-semibold">Langues:</span> {{course.lang.name}} | {{course.level.name}}</p>
      <p class="card-text"><span class="fw-semibold">Mise en ligne:</span> {{course.createdAt | date('d-m-y')}}</p>

      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <a type="button" href="{{path('course_item', {id: course.id})}}" class="btn btn-sm btn-outline-secondary">Voir</a>
        </div>
      </div>
    </div>
  </div>
</div>