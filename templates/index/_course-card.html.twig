<div class="col">
  <div class="card shadow-sm">
    <img src="{{course.coverImage}}" alt="">
    <div class="card-body">
    <h2>{{course.name}}</h2>
      <p class="card-text">{{course.description | u.truncate(100, '...', false)}}</p>
      <p class="card-text">Mise en ligne: {{course.createdAt | date('d-m-y')}}</p>

      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <a type="button" href="{{path('course_item', {id: course.id})}}" class="btn btn-sm btn-outline-secondary">Voir</a>
        </div>
        <small class="text-body-secondary">9 mins</small>
      </div>
    </div>
  </div>
</div>