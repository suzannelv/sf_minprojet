{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}
LOLanguages Dashboard
{% endblock %}

{% block content_title %}
    <h1 class="text-center my-5">Système Administration LOLanguages </h1>
{% endblock %}

{% block main %}
    <div class="container d-flex flex-column align-items-center gap-5">
        {% if app.user %}
        <h2>Bienvenue Administrateur {{app.user.userIdentifier}} </h2>
            {% if app.user.profileUser %}   
                <img src="{{app.user.profileUser}}" alt="" class="rounded-circle">
                {% else %}
                <img src="https://img.freepik.com/vecteurs-libre/speech-bubbles-visages-souriants_23-2147512509.jpg?w=740&t=st=1701532284~exp=1701532884~hmac=eb5091d5a247ad4b702f3bee7d1499328448f251e838199a74c80cd4e7ca6742" alt="" class="rounded-circle">  
            {% endif %}
            <p><a href="{{path('home')}}">Retourner à la page d'accueil</a></p>
        {% endif %}
    </div>

{% endblock %}